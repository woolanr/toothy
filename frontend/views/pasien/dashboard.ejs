<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dasbor Pasien - Happy Toothy</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f9fafb;
      }
      .nav-link.active {
        background-color: #e0f2fe;
        color: #1e40af;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <div class="flex h-screen bg-gray-50">
      <!-- Sidebar Navigation -->
      <nav class="w-64 bg-white p-6 shadow-md flex flex-col justify-between">
        <div>
          <h1 class="text-3xl font-extrabold mb-8 text-blue-600">
            Happy Toothy
          </h1>
          <ul class="space-y-2">
            <li>
              <a
                href="#"
                id="nav-dashboard"
                class="nav-link flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-200 transition-colors duration-200 active"
                ><i class="fas fa-home mr-3 w-5 text-center"></i> Dasbor</a
              >
            </li>
            <li>
              <a
                href="#"
                id="nav-booking"
                class="nav-link flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-200 transition-colors duration-200"
                ><i class="fas fa-calendar-plus mr-3 w-5 text-center"></i>
                Booking Online</a
              >
            </li>
            <li>
              <a
                href="#"
                id="nav-history"
                class="nav-link flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-200 transition-colors duration-200"
                ><i class="fas fa-history mr-3 w-5 text-center"></i> Riwayat
                Kunjungan</a
              >
            </li>
            <li>
              <a
                href="#"
                id="nav-profile"
                class="nav-link flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-200 transition-colors duration-200"
                ><i class="fas fa-user-edit mr-3 w-5 text-center"></i> Profil
                Saya</a
              >
            </li>
          </ul>
        </div>
        <button
          id="logout-btn"
          class="flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg shadow-sm transition duration-300 ease-in-out"
        >
          <i class="fas fa-sign-out-alt mr-2"></i> Keluar
        </button>
      </nav>

      <!-- Main Content -->
      <main class="flex-1 p-8 overflow-y-auto">
        <!-- Dashboard Content -->
        <section id="dashboard-content" class="page-content">
          <h2 class="text-3xl font-bold text-gray-800 mb-6">
            Selamat Datang, <span id="patient-name-greeting"></span>!
          </h2>
          <div class="space-y-6">
            <div>
              <h3 class="text-xl font-semibold text-gray-700 mb-3">
                Janji Temu Akan Datang
              </h3>
              <div
                id="upcoming-appointment-card"
                class="bg-white p-6 rounded-lg shadow-sm"
              >
                <p class="text-gray-500">Memuat janji temu...</p>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-700 mb-3">
                Notifikasi
              </h3>
              <div
                class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded-lg shadow-sm"
              >
                <p>
                  Jangan lupa untuk datang 15 menit lebih awal untuk janji temu
                  Anda!
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Online Booking Content -->
        <section id="booking-content" class="page-content hidden">
          <h2 class="text-3xl font-bold text-gray-800 mb-6">
            Booking Janji Temu Online
          </h2>
          <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
            <form id="booking-form" class="space-y-6">
              <div>
                <label
                  for="booking-service"
                  class="block text-sm font-medium text-gray-700"
                  >1. Pilih Layanan</label
                >
                <select
                  id="booking-service"
                  required
                  class="mt-1 w-full p-2 border rounded-md"
                ></select>
              </div>
              <div>
                <label
                  for="booking-doctor"
                  class="block text-sm font-medium text-gray-700"
                  >2. Pilih Dokter</label
                >
                <select
                  id="booking-doctor"
                  required
                  class="mt-1 w-full p-2 border rounded-md"
                ></select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >3. Pilih Tanggal & Waktu</label
                >
                <div
                  id="doctor-availability"
                  class="mt-2 text-sm text-gray-600"
                >
                  Pilih dokter terlebih dahulu untuk melihat jadwal.
                </div>
              </div>
              <div>
                <label
                  for="booking-notes"
                  class="block text-sm font-medium text-gray-700"
                  >4. Masukkan Keluhan/Catatan Awal</label
                >
                <textarea
                  id="booking-notes"
                  rows="4"
                  class="mt-1 w-full p-2 border rounded-md"
                  placeholder="Contoh: Gigi geraham kanan bawah sakit saat mengunyah..."
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-blue-700"
              >
                Konfirmasi Booking
              </button>
            </form>
          </div>
        </section>

        <!-- History Content -->
        <section id="history-content" class="page-content hidden">
          <h2 class="text-3xl font-bold text-gray-800 mb-6">
            Riwayat Kunjungan & Medis
          </h2>
          <div id="history-container" class="space-y-4">
            <p class="text-center text-gray-500">Memuat riwayat...</p>
          </div>
        </section>

        <!-- Profile Content -->
        <section id="profile-content" class="page-content hidden">
          <!-- We can reuse the profile form from the Staff dashboard here -->
          <h2 class="text-3xl font-bold text-gray-800 mb-8">Profil Saya</h2>
          <form
            id="profile-form"
            class="space-y-6 bg-white p-8 rounded-lg shadow-lg max-w-4xl mx-auto"
          >
            <!-- Profile form content will go here -->
          </form>
        </section>
      </main>
    </div>

    <script src="/js/patientDashboard.js"></script>
  </body>
</html>
